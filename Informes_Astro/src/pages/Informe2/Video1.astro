---
import LayoutVideos from "../../layouts/LayoutVideo1.astro";
---

<LayoutVideos title="Video 1">
  <div class="text-center mb-5 -mt-12">Recursos Utilizados</div>

  <div class="text-center mb-5 mt-4">
    <a
      href="https://archlinux.org/download/"
      class="text-blue-400 hover:underline"
      target="_blank"
    >
      Imagen ISO
    </a> |
    <a
      href="https://www.ventoy.net/en/download.html"
      class="text-blue-400 hover:underline"
      target="_blank">USB Multiboot Creator</a
    > |
    <a
      href="https://github.com/sudorook/archlinux"
      class="text-blue-400 hover:underline"
      target="_blank">Repositorio del Script</a
    >
  </div>

  <div class="video-container mx-auto max-w-4xl">
    <iframe
      src="https://drive.google.com/file/d/1cOjCfxvxCVN1ZrYn9tshWNG1LDvGNcrH/preview"
      width="640"
      height="480"
      allow="autoplay"></iframe>
  </div>

  <style>
    .video-container {
      position: relative;
      padding-bottom: 56.25%;
      height: 0;
      overflow: hidden;
      background: #000;
      border-radius: 0.5rem;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
      margin-top: 2rem;
    }

    .video-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
    }
  </style>
</LayoutVideos>
